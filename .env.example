# ============================================
# DEVELOPMENT ENVIRONMENT VARIABLES
# ============================================

# Backend Server Configuration
NODE_ENV=development
PORT=3000

# Database (Development: SQLite, Production: PostgreSQL)
DATABASE_URL="file:./dev.db"

# Trello OAuth Configuration
TRELLO_CLIENT_ID=your_trello_key_here
TRELLO_CALLBACK_URL=http://localhost:3000/trello-callback.html

# Zoho Cliq OAuth Configuration
CLIQ_CLIENT_ID=1000.Q0XPVQN43A8GSSYTLFIHIB6Z03L1NH
CLIQ_CLIENT_SECRET=your_cliq_client_secret
CLIQ_REDIRECT_URI=http://localhost:3000/api/auth/cliq/callback
CLIQ_WEBHOOK_TOKEN=your_webhook_token_from_cliq

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8000
AI_API_KEY=sk-your_openai_api_key

# Security
JWT_SECRET=your_jwt_secret_here_change_in_production
SESSION_SECRET=your_session_secret_here_change_in_production

# Logging
LOG_LEVEL=info

# ============================================
# PRODUCTION ENVIRONMENT VARIABLES (Render)
# ============================================
# These should be set in Render dashboard as Environment Variables:
# NODE_ENV=production
# DATABASE_URL=postgresql://user:password@your_postgres_host/database_name
# PORT=3000
# TRELLO_CLIENT_ID=your_production_trello_key
# TRELLO_CALLBACK_URL=https://your-render-url.onrender.com/trello-callback.html
# CLIQ_CLIENT_ID=your_production_cliq_id
# CLIQ_CLIENT_SECRET=your_production_cliq_secret
# CLIQ_REDIRECT_URI=https://your-render-url.onrender.com/api/auth/cliq/callback
# CLIQ_WEBHOOK_TOKEN=your_production_webhook_token
# JWT_SECRET=your_production_jwt_secret
# SESSION_SECRET=your_production_session_secret
# AI_API_KEY=sk-your_production_openai_key
# AI_SERVICE_URL=http://localhost:8000 (internal Render communication)
